<div id="channel-infos" ><br>
    {% if upgradeInfo.branch is not empty %}
        <div class="row">
            <div class="col-xs-3 col-md-1">
                <label class="label-small">{{ 'Branch:'|trans }}</label>
            </div>
            <div class="col-xs-9 col-md-11">
                <span class="available">
                    <img src="../img/admin/{% if upgradeInfo.available is not empty %}enabled{% else %}disabled{% endif %}.gif">
                    {% if upgradeInfo.available is not empty %}
                        {{ 'Available'|trans({}, 'Admin.Global') }}
                    {% else %}
                        {{ 'Unavailable'|trans({}, 'Admin.Global') }}
                    {% endif %}
                </span>
            </div>
        </div>
    {% endif %}
    <div class="all-infos">
        {% if upgradeInfo.version_name is not empty %}
            <div class="row">
                <div class="col-xs-3 col-md-1">
                    <label class="label-small">{{ 'Name:'|trans({}, 'Admin.Global') }}</label>
                </div>
                <div class="col-xs-9 col-md-11">
                    <span class="name">{{ upgradeInfo.version_name }}</span>
                </div>
            </div>
        {% endif %}
        {% if upgradeInfo.version_num is not empty %}
            <div class="row">
                <div class="col-xs-3 col-md-1">
                    <label class="label-small">{{ 'Version number:'|trans }}</label>
                </div>
                <div class="col-xs-9 col-md-11">
                    <span class="version">{{ upgradeInfo.version_num }}</span>
                </div>
            </div>
        {% endif %}
        {% if upgradeInfo.link is not empty %}
            <div class="row">
                <div class="col-xs-3 col-md-1">
                    <label class="label-small">{{ 'URL:'|trans }}</label>
                </div>
                <div class="col-xs-9 col-md-11">
                    <a class="url" href="{{ upgradeInfo.link }}">{{ upgradeInfo.link }}</a>
                </div>
            </div>
        {% endif %}
        {% if upgradeInfo.md5 is not empty %}
            <div class="row">
                <div class="col-xs-3 col-md-1">
                    <label class="label-small">{{ 'MD5 hash:'|trans }}</label>
                </div>
                <div class="col-xs-9 col-md-11">
                    <span class="md5">{{ upgradeInfo.md5 }}</span>
                </div>
            </div>
        {% endif %}
        {% if upgradeInfo.changelog is not empty %}
            <div class="row">
                <div class="col-xs-3 col-md-1">
                    <label class="label-small">{{ 'Changelog:'|trans }}</label>
                </div>
                <div class="col-xs-9 col-md-11">
                    <a class="changelog" href="{{ upgradeInfo.changelog }}">{{ 'see changelog'|trans }}</a>
                </div>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-xs-3 col-md-1">
                <label class="label-small">{{ 'PHP compatibility:'|trans }}</label>
            </div>
            <div class="col-xs-9 col-md-11">
                <span class="phpcompatibility">{{ 'Your PHP version must be compatible with both your current PrestaShop version and the one you want to upgrade to.
                    For example, if your current version is 1.6.1.x and you want to upgrade to 1.7.8, only the PHP 7.1 would be compatible with both.'|trans }}
                </span>
                <table class="table-striped upgrade-compat-table">
                <thead>
                    <tr>
                    <th style="background:#fff;"></th>
                    <th colspan="12" style="text-align:center" class="phpversion">PHP Version</th>
                    </tr>
                    <tr class="h-version-titles">
                    <th>PrestaShop Version</th>
                    <th>≤&nbsp;5.1</th>
                    {% for phpVersion in allPhpVersions %}
                        <th>{{ phpVersion }}</th>
                    {% endfor %}
                    <th>≥&nbsp;8.1</th>
                    </tr>
                </thead>
                <tbody>
                {% for prestashopVersion, item in psPhpCompatibilityRanges %}
                    <tr {% if  item.is_current or item.is_target %}class="highlighted-row"{% endif %}>
                        <td class="target"> {{ prestashopVersion }}
                            {% if  item.is_current %}
                                <br><span class="autoupgrade-green">Current</span></td>
                            {% elseif item.is_target%}
                                <br><span class="autoupgrade-green">Target</span></td>
                            {% endif %}
                        <td class="support-no target"><span class="sr-only">No</span>no</td>
                        {% for phpVersion in allPhpVersions %}
                            <td class="target{% if phpVersion == currentFormattedPhpVersion %} highlighted-col{% if targetFormattedPSVersion == prestashopVersion %} targeted{% endif %}{% endif %}">
                                <span class="sr-only">Yes</span>
                                {% if  phpVersion in item.php_versions %}
                                    <i class="icon-check-circle{% if phpVersion == currentFormattedPhpVersion and targetFormattedPSVersion == prestashopVersion %} autoupgrade-white{% endif %}" title="Yes"></i>
                                {% endif %}
                            </td>
                        {% endfor %}
                        <td class="support-no target"><span class="sr-only">No</span></td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
